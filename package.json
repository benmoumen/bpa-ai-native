{
  "name": "bpa-ai-native",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "husky",
    "docker:dev": "docker compose -f docker-compose.dev.yml --env-file .env.docker up --build",
    "docker:dev:detach": "docker compose -f docker-compose.dev.yml --env-file .env.docker up --build -d",
    "docker:down": "docker compose -f docker-compose.dev.yml down",
    "docker:reset": "docker compose -f docker-compose.dev.yml down -v",
    "docker:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:infra": "docker compose up -d"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "apps/api/**/*.ts": [
      "eslint --config apps/api/eslint.config.mjs --fix"
    ],
    "apps/web/**/*.{ts,tsx}": [
      "eslint --config apps/web/eslint.config.mjs --fix"
    ],
    "packages/ui/**/*.{ts,tsx}": [
      "eslint --config packages/ui/eslint.config.mjs --fix"
    ],
    "packages/config/**/*.{ts,tsx}": [
      "eslint --config packages/config/eslint.config.js --fix"
    ],
    "packages/ai-agent/**/*.ts": [
      "eslint --config packages/ai-agent/eslint.config.mjs --fix"
    ]
  }
}

# Docker Development Stack Environment Variables
# Used by: docker compose -f docker-compose.dev.yml up

# =============================================================================
# Infrastructure
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=bpa_ai_native
POSTGRES_PORT=5432

REDIS_PASSWORD=redis
REDIS_PORT=6379

KEYCLOAK_PORT=8080
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# =============================================================================
# Applications
# =============================================================================
WEB_PORT=3000
API_PORT=4000

# NextAuth secret (min 32 chars)
AUTH_SECRET=dev-secret-for-docker-change-in-production-minimum-32-characters

# =============================================================================
# Test Users (configured in Keycloak realm-export.json)
# =============================================================================
# designer@example.com / password - SERVICE_DESIGNER role
# admin@example.com / password - COUNTRY_ADMIN role
# support@unctad.org / password - UNCTAD_SUPPORT role

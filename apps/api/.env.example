# NestJS API Environment Variables
# Copy this file to .env and update with your values

# =============================================================================
# Server Configuration
# =============================================================================

# Server port
PORT=4000

# Node environment
NODE_ENV="development"

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL connection URL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/bpa_ai_native?schema=public"

# =============================================================================
# Keycloak JWT Validation
# =============================================================================

# Keycloak server URL
KEYCLOAK_URL="http://localhost:8080"

# Keycloak realm name
KEYCLOAK_REALM="bpa"

# Keycloak client ID (for audience validation)
KEYCLOAK_CLIENT_ID="bpa-web"

# JWKS URI (auto-derived from KEYCLOAK_URL and KEYCLOAK_REALM)
# KEYCLOAK_JWKS_URI="${KEYCLOAK_URL}/realms/${KEYCLOAK_REALM}/protocol/openid-connect/certs"

# =============================================================================
# Session Configuration
# =============================================================================

# Session timeout in minutes (NFR9: 30 minutes)
SESSION_TIMEOUT_MINUTES=30

# Keycloak connection timeout in milliseconds (NFR27: < 5 seconds)
KEYCLOAK_CONNECTION_TIMEOUT_MS=5000

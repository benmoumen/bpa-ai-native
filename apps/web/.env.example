# Next.js Web Application Environment Variables
# Copy this file to .env.local and update with your values

# =============================================================================
# NextAuth.js Configuration
# =============================================================================

# NextAuth secret - generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-generate-with-openssl"

# NextAuth URL - the base URL of your application
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# Keycloak OAuth2 Configuration
# =============================================================================

# Keycloak server URL
KEYCLOAK_URL="http://localhost:8080"

# Keycloak realm name
KEYCLOAK_REALM="bpa"

# Keycloak client ID (configured in Keycloak admin console)
KEYCLOAK_CLIENT_ID="bpa-web"

# Keycloak client secret (for confidential clients)
KEYCLOAK_CLIENT_SECRET="your-client-secret"

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL
NEXT_PUBLIC_API_URL="http://localhost:4000"
